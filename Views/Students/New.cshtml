@model ofCourse.ViewModels.StudentFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Student</h2>

@using (Html.BeginForm("Save", "Students"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Student.FirstName)
        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.LastName)
        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.Birthdate)
        @Html.TextBoxFor(m => m.Student.Birthdate, "{0:MMM d yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.Birthdate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.CourseId)
        @Html.DropDownListFor(m => m.Student.CourseId, new SelectList(Model.Courses, "Id", "CourseName"), "Select Course", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.CourseId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.EnrollmentTypeId)
        @Html.DropDownListFor(m => m.Student.EnrollmentTypeId, new SelectList(Model.EnrollmentTypes, "Id", "EnrollmentTypeName"), "Select Registration", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.EnrollmentTypeId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.EnrolledInCourseDate)
        @Html.TextBoxFor(m => m.Student.EnrolledInCourseDate, "{0:MMM d yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.EnrolledInCourseDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.CourseStatusTypeId)
        @Html.DropDownListFor(m => m.Student.CourseStatusTypeId, new SelectList(Model.CourseStatusTypes, "Id", "CourseStatusTypeName"), "Select Course Status", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.CourseStatusTypeId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.Grade)
        @Html.TextBoxFor(m => m.Student.Grade, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.Grade)
    </div>

    <div class=“checkbox”>
        <label>
            @Html.CheckBoxFor(m => m.Student.isEnrolled) Enroll in the selected course
            <p></p>
            @Html.ValidationMessageFor(m => m.Student.isEnrolled)
        </label>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}